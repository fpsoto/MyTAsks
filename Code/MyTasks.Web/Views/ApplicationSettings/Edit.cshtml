@using MyTasks.Localization.Desktop
@model MyTasks.Domain.ApplicationSettings

@{
    ViewBag.Title = Desktop.ApplicationSettings + " " + Desktop.Edit;
}

<div style="margin-top: 20px" class="well bs-component">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Desktop.ConfigurationKey
                </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.ConfigurationKey, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.ConfigurationKey, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Desktop.ConfigurationValue
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.ConfigurationValue, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ConfigurationValue, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Desktop.DefaultValue
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DefaultValue, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.DefaultValue, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Desktop.Description
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button name="button" value="send" class="btn btn-primary">@Desktop.Update</button>
                </div>
            </div>

        </div>
    }

    <div>
        @Html.ActionLink(@Desktop.BackToList, "Index")
    </div>
</div>

  

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
