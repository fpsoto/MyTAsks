      <!--<error statusCode="404" redirect="~/BugReport/NotFound"/>
      <error statusCode="403" redirect="~/BugReport/BadRequest"/>-->
    </customErrors>
    
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" requestValidationMode="2.0" />
