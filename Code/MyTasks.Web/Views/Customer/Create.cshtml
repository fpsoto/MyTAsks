@model MyTasks.Domain.Customer
@using MyTasks.Localization.Desktop

@{
    ViewBag.Title = Desktop.NewCustomer;
}

<div style="margin-top: 20px" class="well bs-component">
    @using (Html.BeginForm("Create", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@Desktop.NewCustomer</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Desktop.CustomerName
                </label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Desktop.MainContactName
                </label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.MainContactName, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.MainContactName, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">
                    @Desktop.MainContactEmail
                </label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.MainContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MainContactEmail, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button name="button" value="send" class="btn btn-primary">@Desktop.Create</button>
                    &nbsp;&nbsp;<span style="vertical-align: bottom">  @Desktop.Or </span>&nbsp;&nbsp;
                    @Html.ActionLink(Desktop.BackToList, "Index", "Customer", null, new { @style = "vertical-align: bottom;" })
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




